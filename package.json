{
	"name": "turbo-setup-react-ts-tailwind",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite --port 8001 --mode dev",
		"dev:stg": "vite --port 8001 --mode stg",
		"dev:prod": "vite --port 8001 --mode prod",
		"build": "tsc -b && vite build --mode prod",
		"build:stg": "tsc -b && vite build --mode stg",
		"build:dev": "tsc -b && vite build --mode dev",
		"lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
		"preview": "vite preview --port 8001",
		"prepare": "husky"
	},
	"dependencies": {
		"@tailwindcss/postcss": "^4.0.8",
		"@tailwindcss/vite": "^4.0.8",
		"axios": "^1.7.9",
		"clsx": "^2.1.1",
		"dayjs": "^1.11.13",
		"prettier": "^3.5.2",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"react-router-dom": "^7.2.0",
		"shadcn-ui": "^0.9.5",
		"tailwind-merge": "^3.0.2",
		"zustand": "^5.0.3"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.7.1",
		"@commitlint/config-conventional": "^19.7.1",
		"@eslint/js": "^9.21.0",
		"@shadcn/ui": "^0.0.4",
		"@types/react": "^19.0.10",
		"@types/react-dom": "^19.0.4",
		"@vitejs/plugin-react-swc": "^3.8.0",
		"autoprefixer": "^10.4.20",
		"eslint": "^9.21.0",
		"eslint-plugin-react-hooks": "^5.1.0",
		"eslint-plugin-react-refresh": "^0.4.19",
		"globals": "^16.0.0",
		"husky": "^9.1.7",
		"i18next": "^24.2.2",
		"lint-staged": "^15.4.3",
		"postcss": "^8.5.3",
		"react-i18next": "^15.4.1",
		"tailwindcss": "^4.0.8",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.24.1",
		"vite": "^6.1.1",
		"vite-plugin-preload": "^0.4.2"
	},
	"lint-staged": {
		"**/*.{js,jsx,ts,tsx}": [
			"bun prettier --write"
		]
	}
}
